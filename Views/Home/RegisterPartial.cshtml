 @model WeddingPlanner.Models.RegisterUserViewModel

<div class="form-group">
    <h3>Register</h3>
    <form asp-controller="Home" asp-action="Register" method="POST">
        
        <label asp-for="FirstName"></label><br>
        <input asp-for="FirstName"/>
        <span style='color:red;' asp-validation-for="FirstName"></span>
        <br>
        
        <label asp-for="LastName"></label><br>
        <input asp-for="LastName"/>
        <span style='color:red;' asp-validation-for="LastName"></span>
        <br>
        
        <label asp-for="Email"></label><br>
        <input asp-for="Email"/>
        @{
            if(ViewBag.emailExists != null)
            {
                <span style='color:red;'>@ViewBag.emailExists</span>
            }
            else
            {
                <span style='color:red;' asp-validation-for="Email"></span>
            }
        }
        <br>
        
        <label asp-for="Password"></label><br>
        <input asp-for="Password"/>
        <span style='color:red;' asp-validation-for="Password"></span>
        <br>

        <label asp-for="ConfrimPassword"></label><br>
        <input asp-for="ConfrimPassword"/>
        <span style='color:red;' asp-validation-for="ConfrimPassword"></span>
        <br><br> 
        <button type="submit" class="btn btn-success">Register new User</button>
    </form>
</div>